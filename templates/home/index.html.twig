{% extends 'base.html.twig' %}

{% block metatitle %}Travel Go{% endblock %}
{% block metadescriptions %}Travel Go, votre blog voyage{% endblock %}

{% block body %}
    <section class="py-8">
        <div class="container mx-auto p-4">
            <div class="grid grid-cols-12">
                <div class="col-span-12 order-2 mt-6 lg:col-span-4 lg:order-1">
                    <div class="text-center flex flex-col gap-8 items-center lg:gap-10">
                        <button class="text-primary p-4 rounded-full shadow-2xl text-sm lg:self-start">Explorer le monde <ion-icon name="briefcase" class="text-xl ml-2 align-bottom"></ion-icon></button>
                        <h1 class="text-4xl font-bold leading-tight lg:text-6xl">Les <span class="text-primary">meilleures destinations</span> dans le monde</h1>
                        <p>Nous rendons toujours nos clients heureux en leur offrant autant de choix que possible</p>
                        <button class="bg-primary text-white p-4 rounded-full shadow-2xl">En savoir plus</button>
                    </div>  
                </div>
                <div class="col-span-12 order-1 lg:col-span-8 lg:order-2">
                    <img class="mx-auto" src="./images/top-destination.jpg" alt="Top destination">
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container mx-auto p-4">
            <h2 class="mb-5 font-bold">Les derniers articles</h2>
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4">
                {% for post in lastPosts %}
                <div class="flex flex-col bg-white border shadow-lg rounded-xl">
                    <img class="w-full h-60 rounded-t-xl object-cover" src="{{asset('./images/posts/')}}{{post.image}}" alt="{{post.name}}">
                    <div class="p-4 md:p-5">
                        <h3 class="text-lg font-bold text-gray-800">
                            {{post.name}}
                        </h3>
                        <p class="mt-1 text-gray-500">
                            {{post.metaDescription|slice(0,150)}}...
                        </p>
                        <a class="mt-2 py-2 px-3 text-sm font-semibold rounded-lg border border-transparent bg-primary text-white" href="{{path('post', {'slug':post.slug})}}">
                            Lire la suite
                        </a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
